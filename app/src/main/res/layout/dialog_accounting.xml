<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#DE000000"
                android:text="账单详情"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/switch_accounting_dialog_inOrOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:showText="true"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimary"
                android:textOff="支出"
                android:textOn="收入" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:textColor="#DE000000"
            android:text="账单备注:"/>

        <EditText
            android:id="@+id/editText_accounting_dialog_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Material Design引入了三维中z轴的概念维中z轴的概念Material Design引入了三维中z轴的概念维中z轴的概念"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_accounting_dialog_datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="2019/1/16"/>

        <Button
            android:id="@+id/button_accounting_dialog_timePicker"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="22:25"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:textColor="#DE000000"
            android:text="金额:"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/editText_accounting_dialog_money"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="end"
            android:text="999.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DE000000"
            android:text="RMB"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl">

        <Button
            android:id="@+id/button_accounting_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="确定"/>

        <Button
            android:id="@+id/button_accounting_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>